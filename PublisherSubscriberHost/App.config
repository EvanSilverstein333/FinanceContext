<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
  <system.serviceModel>
    <services>
      <service name="PublisherSubscriberService.Publisher" behaviorConfiguration="mexBehaviour">
        <endpoint address="PublisherSubscriberService" binding="netTcpBinding" contract="PublisherSubscriberService.IPublisher"></endpoint>
        <endpoint address="mex" binding="mexTcpBinding" contract="IMetadataExchange"></endpoint>
        <host >
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:1900/"/>
          </baseAddresses>
        </host>
      </service>
      <service name ="PublisherSubscriberService.Subscriber" behaviorConfiguration="mexBehaviour">
        <endpoint address="PublisherSubscriberService" binding="netTcpBinding" contract="PublisherSubscriberService.ISubscriber"></endpoint>
        <endpoint address="mex" binding="mexTcpBinding" contract="IMetadataExchange"></endpoint>
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:2177/"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="mexBehaviour">
          <serviceMetadata httpGetEnabled="false"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>